{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "./dist/types",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES6",
    "lib": ["ES6"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true
  },
  "include": ["src", "jest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
